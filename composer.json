{
    "name": "justino/page-builder",
    "description": "Drag & Drop Page Builder for Laravel with Livewire",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "livewire", "page builder", "drag and drop", "cms"],
    "autoload": {
        "psr-4": {
            "Justino\\PageBuilder\\": "src/",
            "Justino\\PageBuilder\\DTOs\\": "src/DTOs/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Justino\\PageBuilder\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Justino Contingo",
            "email": "protectedum@proton.me"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0 || ^11.0 || ^12.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Justino\\PageBuilder\\PageBuilderServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
